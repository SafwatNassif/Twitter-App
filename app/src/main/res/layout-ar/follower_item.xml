<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_container"
    app:cardElevation="4dp"
    android:layout_marginBottom="1dp"
    app:cardBackgroundColor="@color/card_view"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/follower_profile"
            android:src="@drawable/profile_avatar"
            app:civ_border_width="1dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/follower_name"
            android:layout_toLeftOf="@id/follower_profile"
            android:layout_marginRight="4dp"
            android:textSize="16dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/follower_handle"
            android:layout_toLeftOf="@id/follower_profile"
            android:layout_below="@id/follower_name"
            android:textColor="@color/handle_color"
            android:layout_marginRight="4dp"
            android:textSize="14dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/follower_bio"
            android:layout_toLeftOf="@id/follower_profile"
            android:layout_below="@id/follower_handle"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:textSize="14dp"
            android:textStyle="bold"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_container"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/card_view"
    android:layout_margin="8dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:padding="8dp"
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    android:id="@+id/follower_profile"
                    android:src="@drawable/appscreen"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/follower_name"
                    android:layout_toRightOf="@id/follower_profile"
                    android:text="safwat Nassif"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="16dp"
                    android:textSize="16dp"
                    />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/follower_handle"
                android:layout_toRightOf="@id/follower_profile"
                android:layout_below="@id/follower_name"
                android:text="handle"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:textSize="16dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/follower_bio"
                android:layout_toRightOf="@id/follower_profile"
                android:layout_below="@id/follower_handle"
                android:text="bio"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:textSize="16dp"
                android:layout_marginBottom="8dp"
                />
        </RelativeLayout>

</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.safwat.twitterapp.Followers">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:id="@+id/action_bar_container"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:id="@+id/profile_Menu"
            android:src="@drawable/appscreen"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mina Nassif"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            android:id="@+id/user_name_title"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/profile_Menu"
            android:layout_marginLeft="16dp"
            />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/action_bar_container"
        android:id="@+id/follower_list"
        android:layout_marginTop="16dp"
        />
</RelativeLayout>
